<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#EFECE8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/displayName"
                    android:text="Name"
                    android:textSize="20dp"
                    android:textColor="@color/black2.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/postTime"
                    android:text="33 Min Ago"
                    android:textSize="20dp"
                    android:textColor="@color/black2.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_more2"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black2.0"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black2.0"
            android:text="The description of the Work"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/postImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/interested"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 Interests"
            android:textColor="@color/black2.0"
            android:textSize="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#F5F0F0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#80AC4841"
            android:id="@+id/address_show"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="8dp">

            <Button
                android:layout_width="0dp"
                android:id="@+id/tag1"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:text="tags1"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="tags2"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:id="@+id/tag2"/>
            <Button
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="tags3"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:id="@+id/tag3"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/interestedBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#C0DD9D"
                android:textColor="@color/blue"
                android:padding="5dp"
                android:gravity="center"
                android:drawableLeft="@drawable/baseline_thumb_up_24"
                android:text="I am Interested"/>
            <Button
                android:id="@+id/notinterestedBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#EA7168"
                android:textColor="@color/blue"
                android:padding="5dp"
                android:drawableLeft="@drawable/baseline_thumb_down_24"
                android:text="Report"
                android:gravity="center"/>
<!--            <Button-->
<!--                android:id="@+id/commentBtn"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:padding="5dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:drawableLeft="@drawable/ic_comment2"-->
<!--                android:layout_weight="1"-->
<!--                android:text="Comment"/>-->
<!--            <Button-->
<!--                android:id="@+id/shareBtn"-->
<!--                android:drawableLeft="@drawable/ic_shareimg2"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="Share"/>-->

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>